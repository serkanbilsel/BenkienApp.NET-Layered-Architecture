@model IEnumerable<BenkienApp.Models.ProductDetailViewModel>



<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col mb-4">
                <div class="card h-100">
                    <!-- Product images carousel -->
                    <!-- Product images carousel -->
                    <div id="productImageCarousel_@item.Product.Id" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @if (item.ProductImages != null && item.ProductImages.Any())
                            {
                                for (int i = 0; i < item.ProductImages.Count; i++)
                                {
                                    var image = item.ProductImages[i];
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img src="@image.ImageUrl" alt="@image.ImageName" class="d-block w-100" />
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="carousel-item active">
                                    <p class="text-center">Ürünün Fotoğrafı Yok!</p>
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#productImageCarousel_@item.Product.Id" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#productImageCarousel_@item.Product.Id" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@item.Product.Name</h5>
                            <!-- Product description-->
                            <p>@item.Product.Description</p>
                            <!-- Product price-->
                            <p class="fw-bolder">@item.Product.Price ₺</p>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <a class="btn btn-outline-dark mt-auto" href="#">Ürün Detayı</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
