@model BenkienApp.Admin.Models.ProductViewModel


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <div class="row justify-content-center">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.IsAvailable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.IsHome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.IsHome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Brand.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.UpdatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.UpdatedAt)
        </dd>
      

    </td>

        <div class="container mt-4">
            <div class="row">
                <!-- İlk Slider: Ana Fotoğraf -->
                <div class="col-md-6">
                    <div id="mainImageCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="@Model.Product.ProductImages.FirstOrDefault()?.ImageUrl" alt="Ana Fotoğraf" class="d-block w-100 img-thumbnail" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- İkinci Slider: Diğer Fotoğraflar -->
                <div class="col-md-6">
                    <div id="otherImagesCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
                        <div class="carousel-inner">
                            @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Count > 1)
                            {
                                for (int i = 1; i < Model.Product.ProductImages.Count; i++)
                                {
                                    var image = Model.Product.ProductImages[i];
                                    <div class="carousel-item">
                                        <img src="@image.ImageUrl" alt="@image.ImageName" class="d-block w-100 img-thumbnail" />
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <p class="text-center">Ürüne ait diğer fotoğraf yok!</p>
                                </div>
                            }
                        </div>

                        <!-- Slider Kontrol Butonları -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#otherImagesCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#otherImagesCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Product.Id">Düzenle</a> |
    <a asp-action="Index">Listeye Geri Dön</a>
</div>



    <!-- Ana Fotoğraf ve Küçük Resimler Slider'ı Senkronize Etme İşlemi -->
   
